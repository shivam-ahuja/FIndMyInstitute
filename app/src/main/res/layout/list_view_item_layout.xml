<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/listviewitembackground"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:clickable="false"

    android:focusableInTouchMode="false"
    >
    <ImageView
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/institute_image"
        android:focusable="false"
        android:clickable="false"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:focusableInTouchMode="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/institute_image"
        android:layout_marginBottom="10dp"
        android:id="@+id/institute_fees"
        android:text="fees"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="institute_name"
        android:id="@+id/institute_name"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/institute_image"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:inputType="textPersonName"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/institute_location"
        android:text="location"
        android:textColor="@color/black"
        android:layout_below="@id/institute_name"
        android:layout_alignParentLeft="true"
       android:layout_margin="5dp"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="institute_email"
        android:id="@+id/institute_email"
        android:layout_below="@id/institute_name"
        android:layout_margin="5dp"

        android:layout_toRightOf="@id/institute_location"
        android:inputType="textEmailAddress"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        />

</RelativeLayout>
    </android.support.v7.widget.CardView>
